
public class MyClass {
    public static void main(String args[])throws InterruptedException 
    {
           Akib obj =  new Akib();
           System.out.println("Main Thread Started!");
           
           System.out.println(obj.isAlive());
           
           obj.start();
           
          System.out.println(obj.isAlive());
           
          // obj.sleep(1000);

           System.out.println("Main thread ended and x: "+obj.x);
    }
}



class Akib extends Thread
{
    int x;
    public void run()
    {
        for(int i=1;i<=10000;i++)
        {
            x++;
        }
        System.out.println("My thread ended and x: " + x);
        // main thread end hbr poreo eta kaj korse tai eke non Demon thread ba user thread bole
    }
  
}



/*
Main Thread Started!
My thread ended and x: 10000
Main thread ended and x: 10000



*/

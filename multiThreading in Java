
public class MyClass {
    public static void main(String args[])throws InterruptedException {
        
    A obj = new A();// main thread obj create korlo
    obj.start();// new ekta thread create hoye gelo say it as t1 and ei t1 ekhn run() func er start line e ase
     
    for(int i=0;i<10;i++)
    {
         System.out.println(2);
         try
         {
             Thread.sleep(100); //ei 100 mili sec dhore j main thread j pause hoye ache to t1 ekhn run() e giye 1 print korlo
         }
         catch(InterruptedException e)
         {
             e.printStackTrace();
         }
         
    }
     
    }

}

// evhbei ek thread theke arek thread e giye kaj krbe
//start eta dye thread k active kore fele then run() methode execute kore

class A extends Thread
{
    @Override
    public void run()
    {
        for(int i=0;i<10;i++)
        {
         System.out.println(1);
          try
         {
             Thread.sleep(100);
         }
         catch(InterruptedException e)
         {
             e.printStackTrace();
         }
        }
        
        
    }
    public void print()
    {
        for(int i=0;i<10;i++)
        {
         System.out.println(1);
          try
         {
             Thread.sleep(100);
         }
         catch(InterruptedException e)
         {
             e.printStackTrace();
         }
        }
        
    }
}

